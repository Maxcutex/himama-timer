<!DOCTYPE html>
<html>
  <head>
    <title>Himama Timer</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    
    <div class="container" style="padding-top: 2rem;">

      <%= link_to("Logout", destroy_user_session_path, method: :delete, class: "btn btn-danger mb-4" ) if current_user.present? %>
      <br/><br/>
      <%= yield %>
    </div>
    
  </body>
</html>
